// server.js
import express from "express";
import fetch from "node-fetch";

const app = express();
const TOKEN = "TON_TOKEN_BOT_ICI";
const CHANNEL_ID = "ID_DU_SALON_DISCORD";

app.get("/messages", async (req, res) => {
  try {
    const response = await fetch(`https://discord.com/api/v10/channels/${CHANNEL_ID}/messages?limit=10`, {
      headers: { Authorization: `Bot ${TOKEN}` }
    });
    const data = await response.json();

    const messages = data.map(msg => ({
      author: msg.author.username,
      content: msg.content,
      timestamp: msg.timestamp
    }));

    res.setHeader("Access-Control-Allow-Origin", "*"); // permet à Blogger d’y accéder
    res.json(messages);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

app.listen(3000, () => console.log("API en ligne sur le port 3000"));
